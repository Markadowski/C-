
#include <stdio.h>

int main() {
	//two itemâ€™s weight (floating points' values ) and number of purchase (floating points' values) 
	double w1, n1, w2, n2, result;
	
	printf("\nInput weight of item1 : ");
	scanf("%lf",&w1);
	printf("\nNo of item1 : ");
    scanf("%lf",&n1);
    printf("\nInput weight of item2 : ");
    scanf("%lf",&w2);
    printf("\nNo of item2 : ");
    scanf("%lf", &n2);
    
	//the average value of the items
	result = ((w1 * n1) + (w2 * n1)) / (n1 + n2);
	printf("Average value = %lf", result);
	
	return (0);
	
}
